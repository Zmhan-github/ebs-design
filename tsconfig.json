{
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": false,
    "allowJs": false,

    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "example",
    "rollup.config.js",
    ".storybook",
    "*/throw.ts",
    "*/setupTests.ts",
    "*/**/*.stories.tsx",
    "*/**/*.types.ts"
  ]
}
